page {
  width: 90%;
  margin: 0 auto;
  background-color: #eee;
}
.avatar {
  display: flex;
  justify-content:center;
  margin-top: 40rpx;
}

.avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50rpx;
}

.name {
  text-align: center;
  color: #9B9B9B;
  font-size: 40rpx;
  margin: 10rpx 0 60rpx;
}

.item {
  display: flex;
  color: #9B9B9B;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #DDD;
  font-size: 36rpx;
}

button {
  color: #FFF;
  background-color: #0095ff;
  border-color: #07c;
  box-shadow: inset 0 1px 0 #66bfff;
  margin-top:20rpx;
}

 


  
 


  