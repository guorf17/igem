/*视频、文章cell*/
page {
overflow: auto;
min-height: 100%;
background-color: #f4f4f4;
}

.wrapper {
position: relative;
overflow-x: hidden;
}
.row-container {
position: relative;
width: 100%;
margin-bottom: 12px;
box-sizing: border-box;
padding-top: 20rpx;
}

.row-container .content-wrapper {
display: block;
width: 100%;
overflow: hidden;
padding-top: 10rpx;
padding: 0 6px;
box-sizing: border-box; 
}

.row-container .content-list {
width: 50%;
display: inline-block;
position: relative;
padding: 0 6px 24px;
vertical-align: top;
box-sizing: border-box;
}
.row-container .content-list .item {
display: block;
width: 100%;
height: 100%;
text-decoration: none;
text-overflow: ellipsis;
white-space: nowrap;
overflow: hidden;
box-sizing: border-box; 
}
.row-container .content-list .item .top {
position: relative;
background-repeat: no-repeat;
background-position: center;
width: 100%;
height: 0;
padding-bottom: 63%;
box-sizing: border-box; 
}

.row-container .content-list .item .top .delete-img {
position: relative;
display: inline-block;
background-repeat: no-repeat;
background-position: center;
width: 45rpx;
height: 50rpx;
margin-right: 5rpx;
padding-bottom: 63%;
box-sizing: border-box; 
}

 .delete-img .delete{
  flex: 1;
  display: inline-block;
  width: 40rpx;
  height: 50rpx;
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-left: 5rpx;
  text-align: left;
}

.row-container .content-list .item .cover-img {
position: absolute;
top: 0;
left: 0;
-webkit-transition: opacity .3s;
transition: opacity .3s;
opacity: 0;
width: 100%;
height: 100%;
background-size: 100% 100%;
background-repeat: no-repeat;
background-position: center center;
border-radius: 5px;
box-sizing: border-box; 
}
.cover-img image{
  width: 100%;
  height: 100%;
}

.idea image{
width: 250rpx;
height: 200rpx;
