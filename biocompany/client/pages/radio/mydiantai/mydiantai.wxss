.row-container .content-list .info .title {
width: 100%;
max-height: 36px;
overflow: hidden;
color: #444;
font-size: 13px;
box-sizing: border-box; 
margin-bottom: 4px;
text-align: center;
}
.row-container .content-list .info .cell {
display: flex;
flex-direction: row;
position: relative;
width: 33%;
font-size: 10px;
color: #999;
padding-left: 0px;
text-overflow: ellipsis;
overflow: hidden;
white-space: nowrap;
