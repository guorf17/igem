.myradio {
width: 725rpx; 
background: #ffffff;
padding: 30rpx 25rpx 30rpx 0;
border-top: 1px solid #eee;
border-bottom: 1px solid #dcdcdc;
box-shadow: 0 2px 5px #eeeeee;
}
.ava{
display:flex;
align-items:column;
flex-direction:column;

}
.myradio-avatar{
width: 250rpx;
height: 200rpx;
border-radius: 30rpx;
margin-right: 50rpx;
margin-bottom: 15rpx;
}
.myradio-button{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  font-size:35rpx;
  background-color:#008080;
  color:#fff;
  line-height:100rpx;
  border-radius:50rpx;
  box-shadow:0 5px 30px 0px rgba(0, 0, 0, 0.3);
  margin-right: 0rpx;
}

.myradio-text{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.myradio-text .name {
  font-size: 40rpx;
  margin-right: 50rpx;
}
.myradio-text .like {
  font-size: 25rpx;
  margin-right: 50rpx;
}
.myradio-info{
display: flex;
justify-content: space-around;
}
.myradio-info.all{
display: flex;
}

.myradio-info.all-image{
width: 50rpx;
height:50rpx;

}
.myradio-info.all-text{
font-size: 14;
padding-left: 10rpx;
}

/*视频、文章cell*/
page {
overflow: auto;
min-height: 100%;
background-color: #f4f4f4;
}

.wrapper {
position: relative;
overflow-x: hidden;
}
.row-container {
position: relative;
width: 100%;
margin-bottom: 12px;
box-sizing: border-box;
padding-top: 20rpx;
}

.row-container .content-wrapper {
display: block;
width: 100%;
overflow: hidden;
padding-top: 10rpx;
padding: 0 6px;
box-sizing: border-box; 
}

.row-container .content-list {
width: 50%;
display: inline-block;
position: relative;
padding: 0 6px 24px;
vertical-align: top;
box-sizing: border-box;
}
.row-container .content-list .item {
display: block;
width: 100%;
height: 100%;
text-decoration: none;
text-overflow: ellipsis;
white-space: nowrap;
overflow: hidden;
box-sizing: border-box; 
}
.row-container .content-list .item .top {
position: relative;
background-repeat: no-repeat;
background-position: center;
width: 100%;
height: 0;
padding-bottom: 63%;
box-sizing: border-box; 
}
.row-container .content-list .item .cover-img {
position: absolute;
top: 0;
left: 0;
-webkit-transition: opacity .3s;
transition: opacity .3s;
opacity: 0;
width: 100%;
height: 100%;
background-size: 100% 100%;
background-repeat: no-repeat;
background-position: center center;
border-radius: 5px;
box-sizing: border-box; 
}
.cover-img image{
  width: 100%;
  height: 100%;
}

.idea image{
width: 250rpx;
height: 200rpx;
margin-left: 50rpx;
border-radius: 100rpx}

.delete-image{
width: 35rpx;
height: 35rpx;
padding-top: 2rpx;
padding-right: 10rpx;
margin-left: 110rpx;
}

.row-container .left {
float: left;
box-sizing: border-box; 
}

.cell-image{
width: 35rpx;
height: 35rpx;
padding-top: 5rpx;
padding-right: 10rpx;
}


.row-container .text-overflow {
text-overflow: ellipsis;
overflow: hidden;
white-space: nowrap;
}

.row-container .content-list .info {
position: relative;
display: block;
width: 100%;
padding-top: 5px;
box-sizing: border-box; 
}
.row-container .content-list .info .title {
width: 100%;
max-height: 36px;
overflow: hidden;
color: #444;
font-size: 13px;
box-sizing: border-box; 
margin-bottom: 4px;
text-align: center;
}
.row-container .content-list .info .cell {
display: flex;
flex-direction: row;
position: relative;
width: 50%;
font-size: 10px;
color: #999;
padding-left: 5rpx;
text-overflow: ellipsis;
overflow: hidden;
white-space: nowrap;
box-sizing: border-box;
}

.row-container .content-list .info .avatar {
position: relative;
width: 42px;
height: 42px;
border-radius: 21px;
border: 2px solid #fff;
top: -26px;
left: 7px;
z-index: 10;
box-sizing: border-box;
}

.row-container .content-list .info .avatar image {
width: 100%;
height: 100%;
border-radius: 50%;
box-sizing: border-box;
}
.row-container .content-list .info .user {
position: absolute;
left: 0;
top: 5px;
width: 100%;
padding-left: 56px;
box-sizing: border-box;
}

.row-container .content-list .info .name {
font-size: 13px;
color: #444;
line-height: 44rpx;
}
.row-container .content-list .info .desp {
font-size: 13px;
color: #999;
padding-top: 2px;
}
.row-container .content-list .info .online {
position: absolute;
top: 25px;
width: 48px;
padding: 0 1px;
color: #fff;
background-color: #ccc;
border-radius: 6px;
text-align: center;
height: 20px;
line-height: 20px;
font-size: 12px;
}
