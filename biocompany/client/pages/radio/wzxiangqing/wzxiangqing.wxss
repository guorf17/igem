.user .userinfo-avatar {
  flex: 1;
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  text-align: left;
}

.user .user-info {
  flex: 5;
  text-align: left;
}

.userinfo-all {
  display: flex;
  margin-top: 15rpx;
}

.user .user-info text {
  display: block;
}

.user .user-info .userinfo-nickname {
  /*padding: 0rpx 300rpx 0rpx 0rpx;*/
  font-size: 30rpx;
  color: #818a8f;
  background-color: #fff;
  overflow: hidden;
}

.ideas {
  width: 750rpx;
  height: 115rpx;
  padding-bottom: 15rpx;
  background-color: #fff;
  margin-top: 15rpx;
}

.ideas image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 60rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 15rpx;
}

.ideas .idea-info {
  width: 620rpx;
  height: 115rpx;
  margin-left: 10rpx;
  flex: 5;
}

