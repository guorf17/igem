/*用户详情*/

.user {
  width: 750rpx;
  height: 120rpx;
  background: #fff;
  padding: 0 0 0 0;
  margin: 0rpx 0 0 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #dcdcdc;
  box-shadow: 0 2px 5px #eee;
}

