<template name="listen-item" >
    <!-- List Item begin -->
    <view class="content-list" bindtap="into_content">
    <navigator class="item">

        <view class="top">
        <view class="cover-img" 
        style="opacity: 1; background-image: url({{coverImg}});">
        </view>
        </view>

        <view class="info">
         
          <view classs="cell-center">
            <view class="cell left">
                <image class ="cell-image" src="/images/眼睛.png"></image>
                <text calss ="cell-text">{{playNum}}</text>
            </view>
            <view class="cell left">
                <image class ="cell-image" src="/images/评论.png"></image>
                <text calss ="cell-text">{{commentNum}}</text>
            </view>
             <view class="cell left">
                <image class ="cell-image" src="/images/收藏.png"></image>
                <text calss ="cell-text">{{collectNum}}</text>
            </view>
          </view>

          <view class="title">{{title}}</view>
    
        </view>
    </navigator>
  </view>
    <!-- List Item end -->
</template>