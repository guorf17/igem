}

.container{
  padding: 0;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}

.content-wrapper{
  width: 95%;
  margin: 0 auto;
}

.container .feed-item{
  box-sizing: border-box;
  position: relative;
  display: flex;
  width: 100%;
  padding: 0rpx 30rpx 0rpx;
  margin: 10rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}

.container .feed-item .feed-source{
  width: 550rpx;
  left: 0;
  height: 50rpx;
}

.container .feed-item .feed-content .answer-actions{
  position: absolute;
  bottom: 11rpx;
  width: 690rpx;
  padding: 10rpx 0  0;
  color: #a0acac;
  display: flex;
}

.answer-actions .like image, .comments image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 14rpx;
}


.answer-actions .like, .comments{
  margin-right: 100rpx;
}

.container .feed-item .feed-source a{
  vertical-align: middle;
  display: inline-block;
  height: 40rpx;
  margin-right: 20rpx;
  overflow-x: hidden; 
}

.avatar {
  width: 100rpx;
  height: 165rpx;
  border-radius: 50%;
  text-align: center;
  margin-right: 30rpx;
  padding-top:8px;
  padding-bottom: 5rpx;
  box-sizing:border-box;
}
.avatar image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
  }

  .avatar .textname {
    width: 100rpx;
    height: 30rpx;
    font-size: 17rpx;
    text-align: center;
    margin-bottom: 5rpx;
    margin-top: 5rpx;
    overflow: hidden; 
    box-sizing: border-box; 
    display: -webkit-box; 
    word-break: break-all; 
    text-overflow: ellipsis; 
    -webkit-box-orient: vertical; 
    -webkit-line-clamp: 3;
  }

  .item-more {
    position: absolute;
    width: 50rpx;
    height: 40rpx;
    right: 26rpx;
  }

  .answer-text{
overflow: hidden; 
box-sizing: border-box; 
display: -webkit-box; 
word-break: break-all; 
text-overflow: ellipsis; 
-webkit-box-orient: vertical; 
-webkit-line-clamp: 3;
font-size: 25rpx;
}
/*feed-item part is in app.wxss for multiplexing*/