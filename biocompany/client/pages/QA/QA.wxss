.container{
  height: 1500rpx;
}
.container .search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #6495ED;
}
.container .search .search-left{
  flex: 8;
  background:#fff;
  text-align:left;
  border-radius:32rpx;

}
.container .search .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
  width: 550rpx;
}

.container .search .search-left .placeholder{
  color: #999;
  line-height: 20rpx;
  display: inline-block;
  text-align: left;
  margin-bottom: 6rpx;
}

